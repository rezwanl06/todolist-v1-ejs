<!DOCTYPE html>
<%- include("header") -%>
<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> <br> <%= place %> </h1>
    </div>

    <div class="box">
        <% for (let k = 0; k < newListItem.length; ++k) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="check" value="<%= newListItem[k]._id%>" onchange="this.form.submit()">
                    <p><%= newListItem[k].name %></p>
                </div>
            </form>
        <% } %>
        <form class="item" action="/" method="post">
            <input type="text" name="newItem" placeholder="Add new item" autocomplete="off">
            <button type="submit" name="button" value=<%= place%>>+</button>
        </form>
    </div>
    
</body>

<%- include("footer") -%>